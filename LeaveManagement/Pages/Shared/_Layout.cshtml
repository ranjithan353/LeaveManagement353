<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Leave Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        /* small visual tweaks */
        .site-footer { background:#0d6efd; color:white; padding:24px 0; }
        .brand-avatar { width:36px; height:36px; border-radius:50%; background:#fff; color:#0d6efd; display:inline-flex; align-items:center; justify-content:center; font-weight:700; margin-right:8px; }
        .content { min-height: calc(100vh - 220px); }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold text-white d-flex align-items-center" href="/">
                <span class="brand-avatar">LM</span>
                <span>LeaveMgmt</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="/Dashboard">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Leaves">My Leaves</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Leaves/Create">Create</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Profile">Profile</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Manager">Manager</a></li>
                </ul>
                <div class="d-flex align-items-center text-white">
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <div class="me-3 text-end">
                            <div class="fw-semibold">@User.Identity.Name</div>
                            <small class="text-light">@{ var roles = string.Join(", ", User.Claims.Where(c=>c.Type==System.Security.Claims.ClaimTypes.Role).Select(c=>c.Value)); }@roles</small>
                        </div>
                        <a class="btn btn-outline-light" href="/Account/Logout">Logout</a>
                    }
                    else
                    {
                        <a class="btn btn-light text-primary" href="/Account/Login">Login</a>
                    }
                </div>
            </div>
        </div>
    </nav>
    <main class="content">
        <div class="container mt-4">
            @RenderBody()
        </div>
    </main>

    <!-- Toast container -->
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 1080">
        @if (TempData["Toast"] != null)
        {
            <div id="appToast" class="toast align-items-center text-bg-primary border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body">@TempData["Toast"]</div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        }
    </div>

    <footer class="site-footer mt-5">
        <div class="container text-center">
            <div class="row">
                <div class="col-md-12">
                    <small>© @DateTime.UtcNow.Year LeaveMgmt — Built with .NET Razor Pages</small>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // If a toast exists, initialize/call show
        document.addEventListener('DOMContentLoaded', function(){
            var t = document.getElementById('appToast');
            if (t) {
                var toast = new bootstrap.Toast(t, { delay: 4000 });
                toast.show();
            }
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>