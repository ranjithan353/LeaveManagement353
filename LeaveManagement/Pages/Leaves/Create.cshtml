@page
@model LeaveManagement.Pages.Leaves.CreateModel

<h3>Create Leave Request</h3>
<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label class="form-label">Start Date</label>
        <!-- Use HTML5 date input so browser shows a correct calendar and value format (yyyy-MM-dd) -->
        <input asp-for="Input.StartDate" class="form-control" type="date" asp-format="{0:yyyy-MM-dd}" />
        <span asp-validation-for="Input.StartDate" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">End Date</label>
        <!-- Use HTML5 date input so browser shows a correct calendar and value format (yyyy-MM-dd) -->
        <input asp-for="Input.EndDate" class="form-control" type="date" asp-format="{0:yyyy-MM-dd}" />
        <span asp-validation-for="Input.EndDate" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Type</label>
        <select asp-for="Input.Type" class="form-select">
            <option value="">Select type</option>
            @foreach (var t in Enum.GetValues(typeof(LeaveManagement.Models.LeaveType)).Cast<LeaveManagement.Models.LeaveType>())
            {
                <option value="@t">@t</option>
            }
        </select>
        <span asp-validation-for="Input.Type" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Reason</label>
        <textarea asp-for="Input.Reason" class="form-control"></textarea>
        <span asp-validation-for="Input.Reason" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Attachment (optional)</label>
        <input type="file" asp-for="Upload" class="form-control" />
        <span asp-validation-for="Upload" class="text-danger"></span>
    </div>
    <button class="btn btn-primary">Create</button>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}